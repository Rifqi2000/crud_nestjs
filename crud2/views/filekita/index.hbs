<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>{{ title }}</title>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css">
  </head>
  <body>
    <table id="example" class="display" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nama</th>
                <th>Deskripsi</th>
                <th>IsPublik</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>Id</th>
                <th>Nama</th>
                <th>Deskripsi</th>
                <th>IsPublik</th>
            </tr>
        </tfoot>
    </table>

    <script>
        $(document).ready(function() {
            $('#example').DataTable( {
                "ajax": 'jsondata',
                "columns" : [
                    {"data" : "id"},
                    {"data" : "nama"},
                    {"data" : "deskripsi"},
                    {"data" : "isPublic"},
                ]
            });
        });
    </script>
  </body>
</html>